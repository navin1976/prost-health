---
import { NAV_ITEMS, CONTACT_EMAIL, EXTERNAL_RESOURCES } from '../../lib/constants';

const currentYear = new Date().getFullYear();
---

<footer class="bg-[--color-black] text-white mt-auto">
  <div class="container mx-auto px-6 py-12">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand Column -->
      <div class="space-y-4">
        <h3 class="text-2xl font-serif font-semibold">Prost Health</h3>
        <p class="text-sm text-gray-800">
          The definitive approach to prostate health. MRI-first screening for clarity, not chance.
        </p>
      </div>

      <!-- Navigation Column -->
      <div>
        <h4 class="text-sm font-semibold mb-4 uppercase tracking-wider">Navigate</h4>
        <ul class="space-y-2">
          {NAV_ITEMS.map(({ label, href }) => (
            <li>
              <a href={href} class="text-sm text-gray-800 hover:text-accent transition-colors">
                {label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources Column -->
      <div>
        <h4 class="text-sm font-semibold mb-4 uppercase tracking-wider">Support Resources</h4>
        <ul class="space-y-2">
          {EXTERNAL_RESOURCES.map((resource) => (
            <li>
              <a
                href={resource.url}
                target="_blank"
                rel="noopener noreferrer"
class="text-sm text-gray-800 hover:text-accent transition-colors"
              >
                {resource.name}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Column -->
      <div>
        <h4 class="text-sm font-semibold mb-4 uppercase tracking-wider">Get in Touch</h4>
        <ul class="space-y-2">
          <li>
            <a
              href={`mailto:${CONTACT_EMAIL}`}
              class="text-sm text-gray-800 hover:text-[--color-accent] transition-colors"
            >
              {CONTACT_EMAIL}
            </a>
          </li>
          <li>
            <a
              href="/contact"
              class="text-sm text-gray-800 hover:text-[--color-accent] transition-colors"
            >
              Contact Form
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-gray-600">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-gray-800">
          Â© {currentYear} Prost Health. All rights reserved.
        </p>
        <ul class="flex gap-6 text-sm">
          <li>
            <a href="/privacy" class="text-gray-800 hover:text-accent transition-colors">
              Privacy Policy
            </a>
          </li>
          <li>
            <a href="/terms" class="text-gray-800 hover:text-accent transition-colors">
              Terms of Service
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</footer>
