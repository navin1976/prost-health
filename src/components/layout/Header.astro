---
import { NAV_ITEMS } from '../../lib/constants';
import Logo from '../Logo.astro';

interface Props {
  transparent?: boolean;
}

const { transparent = false } = Astro.props;
const currentPath = Astro.url.pathname;
---

<header class:list={['header', { 'transparent': transparent }]} id="main-header">
  <div class="header-container">
    <!-- Logo -->
    <a href="/" class="header-logo-link">
      <Logo />
    </a>

    <!-- Desktop Navigation -->
    <nav class="header-nav" aria-label="Primary navigation">
      <ul>
        {NAV_ITEMS.map(({ label, href }) => {
            const isActive = href === '/' 
                ? currentPath === href 
                : currentPath.startsWith(href);
            
            return (
              <li>
                <a
                  href={href}
                  class={`header-link ${isActive ? 'active' : ''}`}
                  aria-current={isActive ? 'page' : undefined}
                >
                  {label}
                </a>
              </li>
            );
        })}
        <li>
          <a
            href="/contact"
            class="header-cta-nav"
          >
            Contact
          </a>
        </li>
      </ul>
    </nav>

    <!-- Mobile Menu Button -->
    <button
      id="mobile-menu-button"
      class="mobile-menu-btn"
      aria-expanded="false"
      aria-controls="mobile-menu"
      aria-label="Toggle navigation menu"
    >
      <svg
        class="menu-icon"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M4 6h16M4 12h16M4 18h16"
        />
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="mobile-menu">
    <nav aria-label="Mobile navigation">
      <ul>
        {NAV_ITEMS.map(({ label, href }) => (
          <li>
            <a
              href={href}
              class={`mobile-nav-link ${
                currentPath.startsWith(href) ? 'active' : ''
              }`}
            >
              {label}
            </a>
          </li>
        ))}
        <li>
          <a
            href="/contact"
            class="mobile-nav-cta-nav"
          >
            Contact
          </a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    background: rgba(255, 255, 255, 0.98); /* Default solid white */
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--color-border);
    transition: background-color 0.3s ease, border-color 0.3s ease, color 0.3s ease;
    color: var(--color-black);
    height: var(--header-height);
  }

  /* Transparent state for Hero pages */
  .header.transparent {
    background: transparent;
    border-bottom-color: transparent;
    color: var(--color-white); /* Assuming dark hero bg */
  }

  /* Scrolled state (applied via JS) */
  .header.scrolled {
    background: rgba(255, 255, 255, 0.98) !important;
    border-bottom-color: var(--color-border) !important;
    color: var(--color-black) !important;
  }

  .header-container {
    max-width: var(--container-max);
    margin: 0 auto;
    padding: 0 var(--container-padding);
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
  }

  .header-logo-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    align-items: center;
  }

  .header-nav ul {
    display: flex;
    align-items: center;
    gap: 3rem; /* Increased spacing */
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .header-link {
    font-size: 0.95rem;
    font-weight: 500;
    color: inherit; /* Inherit from header color */
    text-decoration: none;
    position: relative;
    transition: color var(--transition-base);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    opacity: 0.9;
  }

  .header-link::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 0;
    height: 1px;
    background: currentColor; /* Match text color */
    transition: width var(--transition-base);
  }

  .header-link:hover {
    opacity: 1;
  }

  .header-link:hover::after {
    width: 100%;
  }

  .header-link.active {
    opacity: 1;
    font-weight: 600;
    color: var(--color-black);
  }
  
  /* Ensure 'Home' isn't highlighted if we are on other pages, unless it's actually the home page */
  /* We handle this logic in the component script now by checking exact match for home */

  .header-link.active::after {
    width: 100%;
  }

  .header-cta-nav {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    background: var(--color-black);
    color: #ffffff;
    font-weight: 500;
    text-decoration: none;
    transition: all var(--transition-base);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 0.9rem;
  }

  /* Adjust CTA for transparent header */
  .header.transparent .header-cta-nav {
      background: var(--color-white);
      color: var(--color-black);
  }
  
  .header.scrolled .header-cta-nav {
      background: var(--color-black);
      color: var(--color-white);
  }

  .header-cta-nav:hover {
    background: var(--color-gold) !important;
    color: var(--color-white) !important;
    transform: translateY(-1px);
  }

  .mobile-menu-btn {
    display: none;
    background: none;
    border: none;
    color: inherit;
    cursor: pointer;
    padding: var(--space-xs);
    transition: color var(--transition-base);
  }

  .mobile-menu-btn:hover {
    opacity: 0.8;
  }

  .menu-icon {
    width: 1.5rem;
    height: 1.5rem;
  }

  .mobile-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: var(--color-white);
    border-bottom: 1px solid var(--color-border);
    padding: 2rem var(--container-padding);
    box-shadow: 0 10px 30px rgba(0,0,0,0.05);
    color: var(--color-black); /* Always dark text in mobile menu */
  }
  
  .mobile-menu.show {
      display: block;
  }

  .mobile-menu nav ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .mobile-nav-link {
    font-size: 1.2rem;
    font-weight: 400;
    color: var(--color-black);
    text-decoration: none;
    transition: color var(--transition-base);
    font-family: var(--font-display);
  }

  .mobile-nav-link:hover,
  .mobile-nav-link.active {
    color: var(--color-gold);
  }

  .mobile-nav-cta-nav {
    display: block;
    padding: 1rem;
    background: var(--color-black);
    color: var(--color-white);
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    text-align: center;
    transition: all var(--transition-base);
    margin-top: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .mobile-nav-cta-nav:hover {
    background: var(--color-gold);
  }

  /* Responsive Design */
  @media (max-width: 900px) {
    .header-nav {
      display: none;
    }

    .mobile-menu-btn {
      display: block;
    }
  }
</style>

<script>
  const header = document.getElementById('main-header');
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  // Scroll Logic
  const updateHeaderOnScroll = () => {
    if (!header) return;
    
    if (window.scrollY > 50) {
      header.classList.add('scrolled');
    } else {
      header.classList.remove('scrolled');
    }
  };

  window.addEventListener('scroll', updateHeaderOnScroll);
  // Initial check
  updateHeaderOnScroll();

  // Mobile Menu Logic
  if (menuButton && mobileMenu) {
    menuButton.addEventListener('click', () => {
      const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
      menuButton.setAttribute('aria-expanded', (!isExpanded).toString());
      mobileMenu.classList.toggle('show');
      
      // Ensure header is solid when menu is open if on transparent page
      if (!isExpanded) {
          header?.classList.add('scrolled');
      } else if (window.scrollY <= 50) {
          header?.classList.remove('scrolled');
      }
    });
  }
</script>
