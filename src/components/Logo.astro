---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class:list={["logo-wrapper", className]}>
  <svg class="logo-icon" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg">
    <!-- Elegant flowing leaf from Option 3 -->
    <path d="M26 8 C28 6, 32 8, 30 12"
          fill="none" stroke="currentColor" stroke-width="2.8" stroke-linecap="round" stroke-linejoin="round"/>
    <!-- Rounder apple shape from Option 3 -->
    <path d="M24 12 C17 12, 11 17, 11 24 C11 31, 16 38, 24 42 C32 38, 37 31, 37 24 C37 17, 31 12, 24 12 Z"
          fill="none" stroke="currentColor" stroke-width="3.2" stroke-linecap="round" stroke-linejoin="round"/>
    <!-- Subtle highlight curve from Option 1 -->
    <path d="M16 20 C16 18, 18 16, 20 16"
          fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" opacity="0.4"/>
  </svg>
  <span class="logo-text">Prost Health</span>
</div>

<style>
  .logo-wrapper {
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
  }

  .logo-icon {
    width: 32px;
    height: 32px;
    flex-shrink: 0;
  }

  .logo-text {
    font-family: var(--font-primary);
    font-size: 1.5rem;
    font-weight: 600;
    letter-spacing: -0.02em;
    color: inherit;
  }

  /* Larger variant for hero sections */
  .logo-wrapper.logo-large .logo-icon {
    width: 48px;
    height: 48px;
  }

  .logo-wrapper.logo-large .logo-text {
    font-size: 2rem;
    font-weight: 600;
  }
</style>
