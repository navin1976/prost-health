---
import BaseLayout from '../components/layout/BaseLayout.astro';
---

<BaseLayout
  title="Prost Health | Clarity, Not Chance"
  description="The definitive, MRI-first approach to prostate health."
  transparentHeader={true}
>
  <!-- Hero Section: Full Screen Video/Image Background -->
  <section class="hero theme-dark">
    <div class="image-wrapper hero-bg">
        <!-- Using an existing image as placeholder for video -->
      <img src="/images/mri-scanner-modern.jpg" alt="Modern MRI Scanner" class="parallax-image" />
      <div class="hero-overlay"></div>
    </div>

    <div class="container hero-container">
      <div class="hero-content scroll-animate">
        <h1 class="hero-title">
          Clarity, <br />
          <span class="text-gold">Not Chance.</span>
        </h1>
        <p class="hero-lead">
          The definitive approach to prostate health. An MRI-first pathway delivering 
          precise diagnostics to avoid unnecessary procedures.
        </p>
        <div class="hero-actions">
          <a href="/request-screening" class="btn btn-gold">Request Screening</a>
          <a href="#approach" class="btn btn-secondary">Our Approach</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Introduction / Philosophy -->
  <section id="approach" class="section-padding">
    <div class="container">
      <div class="grid grid-2">
        <div class="content-text scroll-animate">
          <span class="text-caption">The Philosophy</span>
          <h2>Precision Medicine for Men's Health.</h2>
          <p class="text-lead">
            Traditional screening relies on chance. We rely on clarity.
          </p>
          <p>
            By utilizing advanced Biparametric and Multiparametric MRI technologies *before* any invasive procedures, 
            we can rule out cancer with 97% confidence or precisely target it. No more blind biopsies.
          </p>
           <a href="/mri-info" class="btn btn-primary">Learn about MRI</a>
        </div>
        <div class="image-wrapper scroll-animate-right">
           <img src="/images/consult.webp" alt="Doctor consultation" />
        </div>
      </div>
    </div>
  </section>

  <!-- Experts Section: The Core Team -->
  <section class="section-padding theme-dark">
    <div class="container">
      <div class="section-header scroll-animate">
        <span class="text-caption text-gold">World-Class Radiologists</span>
        <h2>Expertise is our Product.</h2>
        <p>
            An MRI is only as good as the eyes interpreting it. Meet the leading uroradiologists behind Prost Health.
        </p>
      </div>

      <div class="grid grid-4 experts-grid">
        <!-- Expert 1 -->
        <div class="expert-card scroll-animate">
          <div class="image-wrapper expert-img">
            <!-- Placeholder if image missing, referencing known files or placeholders -->
            <img src="/images/doctor-patient-consultation.jpg" alt="Dr. Clare Allen" style="filter: grayscale(100%); opacity: 0.8;" />
          </div>
          <div class="expert-info">
            <h3>Dr. Clare Allen</h3>
          </div>
        </div>

        <!-- Expert 2 -->
        <div class="expert-card scroll-animate" style="transition-delay: 0.1s">
          <div class="image-wrapper expert-img">
            <img src="/images/alex-kirkham.jpg" alt="Dr. Alex Kirkham" />
          </div>
          <div class="expert-info">
            <h3>Dr. Alex Kirkham</h3>
          </div>
        </div>

        <!-- Expert 3 -->
        <div class="expert-card scroll-animate" style="transition-delay: 0.2s">
             <div class="image-wrapper expert-img">
             <img src="/images/medical-scanner-equipment.jpg" alt="Dr. Navin Ramachandran" style="filter: grayscale(100%); opacity: 0.8;" />
          </div>
          <div class="expert-info">
            <h3>Dr. Navin Ramachandran</h3>
          </div>
        </div>

        <!-- Expert 4 -->
        <div class="expert-card scroll-animate" style="transition-delay: 0.3s">
            <div class="image-wrapper expert-img">
            <img src="/images/miles-walkden.jpg" alt="Dr. Miles Walkden" />
          </div>
          <div class="expert-info">
            <h3>Dr. Miles Walkden</h3>
          </div>
        </div>
      </div>
      
      <div class="text-center" style="margin-top: var(--space-lg);">
        <a href="/experts" class="btn btn-gold">Read Full Profiles</a>
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="section-padding">
    <div class="container">
        <div class="section-header text-center scroll-animate" style="margin-bottom: 4rem;">
            <span class="text-caption">The Journey</span>
            <h2>From Uncertainty to Clarity.</h2>
        </div>
        
        <div class="grid grid-3 process-steps">
            <div class="process-step scroll-animate">
                <span class="step-num">01</span>
                <h3>Request Screening</h3>
                <p>Complete our secure, online assessment to determine your risk profile.</p>
            </div>
            <div class="process-step scroll-animate" style="transition-delay: 0.2s">
                <span class="step-num">02</span>
                <h3>Expert MRI Scan</h3>
                <p>Undergo a non-invasive, high-resolution MRI scan at a premier facility.</p>
            </div>
             <div class="process-step scroll-animate" style="transition-delay: 0.4s">
                <span class="step-num">03</span>
                <h3>Definitive Report</h3>
                <p>Receive a comprehensive report from our top radiologists, guiding your next steps.</p>
            </div>
        </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section-padding theme-dark text-center">
      <div class="container">
          <h2 class="scroll-animate">Take Control of Your Health.</h2>
          <div class="scroll-animate" style="margin-top: var(--space-md);">
            <a href="/request-screening" class="btn btn-gold">Start Assessment</a>
          </div>
      </div>
  </section>

</BaseLayout>

<style>
  .hero {
    position: relative;
    height: 90vh;
    min-height: 600px;
    display: flex;
    align-items: center;
    overflow: hidden;
    margin-top: calc(var(--header-height) * -1); /* Pull hero up behind header if header is transparent, but we made header white. Let's keep it simple for now. */
    /* Actually, if we want the hero to be fully immersive, we might want the header transparent ON THIS PAGE ONLY.
       But for consistency and "Trust", a solid header is safer. Let's stick to the solid header update I just made. 
       So I will remove this negative margin hack if it was there, or ensure we don't need it. 
       Wait, the user liked the "Artistic" aspect. Maybe transparent header IS better for Home.
       
       Let's modify the page specific style to override the header if needed? 
       No, let's rely on the solid header for accessibility/trust first.
    */
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0,0,0,0.4); /* Dark overlay for text readability */
  }

  .hero-container {
    position: relative;
    z-index: 1;
  }

  .hero-content {
    max-width: 800px;
  }

  .text-gold {
    color: var(--color-gold);
    font-style: normal; /* Removed italic */
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }

  /* Expert Cards */
  .expert-card {
    text-align: left;
  }

  .expert-img {
    aspect-ratio: 3/4;
    margin-bottom: 1rem;
  }
  
  .expert-info h3 {
      font-size: 1.25rem;
      margin-bottom: 0.25rem;
  }

  /* Process Steps */
  .process-step {
      padding: 2rem;
      border-left: 1px solid var(--color-border);
  }
  
  .step-num {
      display: block;
      font-family: var(--font-display);
      font-size: 3rem;
      color: var(--color-gold);
      margin-bottom: 1rem;
      line-height: 1;
  }

  /* Animation classes (using standard CSS transitions for now, enhanced by JS) */
  .scroll-animate {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }
  
  .scroll-animate-right {
      opacity: 0;
      transform: translateX(30px);
      transition: opacity 0.8s ease-out, transform 0.8s ease-out;
  }

  .animate-in {
    opacity: 1;
    transform: translate(0, 0);
  }
</style>

<script>
  const observerOptions = {
    root: null,
    rootMargin: '0px',
    threshold: 0.1,
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        entry.target.classList.add('animate-in');
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  document.querySelectorAll('.scroll-animate, .scroll-animate-right').forEach((el) => {
    observer.observe(el);
  });
</script>
